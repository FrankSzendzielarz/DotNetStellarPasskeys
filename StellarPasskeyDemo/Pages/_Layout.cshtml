<body>
    <section class="hero is-black is-medium">
        <div class="hero-head">
            <nav class="navbar">
                <div class="container">
                    @*<div class="navbar-brand">
                            @*<a class="navbar-item">
                                <img src="https://bulma.io/images/bulma-type-white.png" alt="Logo">
                            </a>
                            <span class="navbar-burger burger" data-target="navbarMenuHeroB">
                                <span></span>
                                <span></span>
